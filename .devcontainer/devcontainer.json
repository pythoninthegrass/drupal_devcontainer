{
  "name": "local.drupal.com",
  "dockerComposeFile": "../docker-compose.yml",
  "remoteUser": "www-data",
  "service": "web",
  "runServices": ["web", "db"],
  "workspaceFolder": "/opt/drupal",
  "customizations": {
    "vscode": {
      "extensions": [
        "gruntfuggly.todo-tree",
        "eamodio.gitlens",
        "gitkraken.gitkraken-authentication",
        "cweijan.vscode-mysql-client2",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "whatwedo.twig",
        "marcostazi.vs-code-drupal",
        "vscode-icons-team.vscode-icons",
        "xdebug.php-debug",
        "bmuskalla.vscode-tldr"
      ],
      "settings": {
        "files": {
          "associations": {
            "*.sh": "shellscript"
          },
          "trimFinalNewlines": true,
          "trimTrailingWhitespace": true
        },
        "editor": {
          "formatOnPaste": true,
          "formatOnSave": true
        },
        "php": {
          "version": 8.1,
          "executablePath": "/usr/local/bin/php",
          "suggest.basic": true,
          "problems.excludeGitIgnore": true,
          "format.codeStyle": "Drupal"
        },
        "[php]": {
          "editor.defaultFormatter": "stanislav.vscode-drupal"
        },
        "terminal.external.linuxExec": "/usr/bin/bash",
        "terminal.integrated.defaultProfile.linux": "bash",
        "workbench.editor.highlightModifiedTabs": true,
        "workbench.colorCustomizations": {
          "activityBar.activeBackground": "#000000",
          "activityBar.activeBorder": "#f2a900",
          "activityBar.background": "#000000",
          "activityBar.foreground": "#ffffff",
          "activityBar.inactiveForeground": "#ffffff",
          "activityBarBadge.background": "#f2a900",
          "activityBarBadge.foreground": "#330072",
          "debugIcon.breakpointForeground": "#DB2C39",
          "editorGroup.border": "#f2a900",
          "panel.border": "#f2a900",
          "sideBar.border": "#f2a900",
          "titleBar.activeBackground": "#000000",
          "titleBar.activeForeground": "#ffffff",
          "titleBar.inactiveBackground": "#000000",
          "titleBar.inactiveForeground": "#ffffff",
          "sash.hoverBorder": "#DB2C39",
          "statusBar.background": "#000000",
          "statusBar.foreground": "#ffffff",
          "statusBar.debuggingBackground": "#330072",
          "statusBar.debuggingForeground": "#ffffff",
          "statusBarItem.hoverBackground": "#DB2C39",
          "statusBarItem.remoteBackground": "#330072",
          "statusBarItem.remoteForeground": "#ffffff"
        }
      }
    }
  },
  "postCreateCommand": "/bin/bash -c \"sudo chown -R www-data:www-data /opt/drupal && sudo chown -R www-data:www-data /postCreateCommand.sh && /postCreateCommand.sh\"",
  "postAttachCommand": "/bin/bash -c \"sudo chown -R www-data:www-data /opt/drupal && sudo chown -R www-data /user/www-data && sudo chmod -R 700 /user/www-data/.ssh && source ~/.bashrc\"",
  "shutdownAction": "stopCompose"
}
